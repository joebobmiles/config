{
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    ".**"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    /* Core rules */
    "indent": [
      "error",
      2,
      {
        "offsetTernaryExpressions": true
      }
    ],
    "semi": "error",
    /* Quote rules */
    "quotes": [
      "error",
      "backtick"
    ],
    "quote-props": [
      "error",
      "always"
    ],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    /* Spacing rules */
    "spaced-comment": [
      "error",
      "always",
      {
        "markers": [
          "/",
          "*"
        ],
        "balanced": true
      }
    ],
    /* Paren/bracket/brace rules */
    "wrap-regex": "error",
    "no-extra-parens": [
      "error",
      "all",
      {
        "conditionalAssign": false,
        "returnAssign": false,
        "nestedBinaryExpressions": false,
        "ignoreJSX": "all",
        "enforceForArrowConditionals": false,
        "enforceForSequenceExpressions": false,
        "enforceForNewInMemberExpressions": false
      }
    ],
    /* Variable declaration rules */
    "prefer-const": [
      "error",
      "always"
    ]
  }
}